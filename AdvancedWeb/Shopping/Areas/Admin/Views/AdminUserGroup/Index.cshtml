@model IEnumerable<Shopping.Models.DataModel.UserGroup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách nhóm</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <p>
                        @Html.ActionLink("Thêm nhóm", "Create")
                    </p>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="center"><center>STT</center></th>
                                <th class="center"><center>Tên nhóm</center></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>
                                        <center>@item.Id</center>
                                    </td>
                                    <td>
                                        <center>@item.Name</center>
                                    </td>
                                    <td>
                                        <center>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" style="color: inherit;" data-toggle="tooltip" title="Sửa">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.Id })" style="color: inherit;" data-toggle="tooltip" title="Xóa">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                            <a href="@Url.Action("Role", "UserGroupRole", new { Id = item.Id })" style="color: inherit;" data-toggle="tooltip" title="Phân quyền">
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                            </a>
                                        </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

