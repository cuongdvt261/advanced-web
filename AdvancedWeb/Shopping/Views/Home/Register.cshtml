@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".Email").on("change", function () {
            $.ajax({
                type: "POST",
                url: "/Common/CheckEmail",
                data: {
                    email: $(this).val()
                },
                success: function (data) {
                    if (data == "Yes") {
                        $(".emailError").html("Email đã được sử dụng");
                        $(".emailError").css('color', 'red');
                        $('.Email').val('');
                        $('.Email').focus();
                    } else {
                        $(".emailError").html("Có thể sử dụng Email này");
                        $(".emailError").css('color', 'green');
                    }
                }
            });
        });

        $(".Username").on("change", function () {
            $.ajax({
                type: "POST",
                url: "/Common/CheckUsername",
                data: {
                    uName: $(this).val()
                },
                success: function (data) {
                    if (data == "Yes") {
                        $(".uNameError").html("Username đã được sử dụng");
                        $(".uNameError").css('color', 'red');
                        $('.Username').val('');
                        $('.Username').focus();
                    } else {
                        $(".uNameError").html("Có thể sử dụng Username này");
                        $(".uNameError").css('color', 'green');
                    }
                }
            });
        });
    });
</script>
