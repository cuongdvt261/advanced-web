@using AdvancedWeb.Models.DataModel
@using AdvancedWeb.Models.Helper
@using System.Globalization
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/MasterPage/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            DANH SACH SAN PHAM
                        </h2>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><center>#</center></th>
                                    <th><center>Loại</center></th>
                                    <th><center>Tên</center></th>
                                    <th><center>Mô tả</center></th>
                                    <th><center>Giá</center></th>
                                    <th><center>Số lượng</center></th>
                                    <th><center>Ảnh</center></th>
                                    <th><center>Ngày tạo</center></th>
                                    <th><center>Ngày sửa</center></th>
                                    <th><center>Đã xóa?</center></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><center>@item.Id</center></th>
                                        <td><center>@item.Category.Name</center></td>
                                        <td><center><b>@item.Name</b></center></td>
                                        <td><center>@item.Description</center></td>
                                        <td><center>@item.Price</center></td>
                                        <td><center>@item.Quantity</center></td>
                                        <td><center><img src="@Url.Content(Constants.PATH_TO_IMAGE + item.Image)" class="img-rounded" width="100" height="120" alt="Cinque Terre" /></center></td>
                                        <td><center>@String.Format("{0:d/M/yyyy}", item.CreatedDate)</center></td>
                                        <td><center>@item.ModifiedDate</center></td>
                                        <td><center>@item.Deleted</center></td>
                                        <td>
                                            <a href="@Url.Action("Edit", "AdminProduct", new { @id = item.Id })" style="color: inherit;">
                                                <i class="material-icons">edit</i>
                                            </a>
                                            <a href="@Url.Action("Delete", "AdminProduct", new { @id = item.Id })" style="color: inherit;">
                                                <i class="material-icons">delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->
    </div>
</section>




