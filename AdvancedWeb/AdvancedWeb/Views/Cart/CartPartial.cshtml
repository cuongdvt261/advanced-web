@using AdvancedWeb.Models.Helper
@model List<ShoppingCart>

@{
    int quantity = (int)ViewBag.TongSoLuong;
    double sum = (double)ViewBag.TongTien;
}

<div class="aa-cartbox">
    <a class="aa-cart-link" href="#">
        <span class="fa fa-shopping-basket"></span>
        <span class="aa-cart-title">@VNLang.CART</span>
        <span class="aa-cart-notify">@quantity</span>
    </a>
    <div class="aa-cartbox-summary">
        <ul>
            @{
                foreach (var item in Model)
                {
                    <li>
                        <a class="aa-cartbox-img" href="#"><img src="@Url.Content(Constants.PATH_TO_IMAGE + item.Image)" alt="img"></a>
                        <div class="aa-cartbox-info">
                            <h4><a href="#">@item.Name</a></h4>
                            <p>@item.Quantity x @item.Price</p>
                        </div>
                        <a class="aa-remove-product" href="@Url.Action("DeleteShoppingCart", "Cart", new { @_idProduct = item.ProductId })"><span class="fa fa-times"></span></a>
                    </li>
                }
            }
            <li>
                <span class="aa-cartbox-total-title">
                    @VNLang.TOTAL_PRICE
                </span>
                <span class="aa-cartbox-total-price">
                    @sum
                </span>
            </li>
        </ul>
        <a class="aa-cartbox-checkout aa-primary-btn" href="checkout.html">@VNLang.ORDER_NOW</a>
    </div>
</div>

