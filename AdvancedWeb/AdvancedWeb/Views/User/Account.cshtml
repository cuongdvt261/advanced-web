
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/MasterPage/_HomeLayout.cshtml";
}

  <!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Đăng kí thành viên</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Trang chủ</a></li>
                    <li class="active">Tài khoản</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->

 <!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Đăng nhập</h4>
                                <form action="" class="aa-login-form">
                                    <label for="">Tên đăng nhập<span>*</span></label>
                                    <input type="text" placeholder="Username or email">
                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input type="password" placeholder="Password">
                                    <button type="submit" class="aa-browse-btn">Đăng nhập</button>
                                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Ghi nhớ </label>
                                    <p class="aa-lost-password"><a href="#">Quên mật khẩu?</a></p>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Đăng kí</h4>
                                <form action="" class="aa-login-form">
                                    <label for="">Tên đăng nhập<span>*</span></label>
                                    <input type="text" placeholder="Username or email">
                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input type="password" placeholder="Password">
                                    <button type="submit" class="aa-browse-btn">Dăng kí</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->

