@using AdvancedWeb.Models.DAO
@using AdvancedWeb.Models.DataModel
@using AdvancedWeb.Models.Helper
@model List<Category>

<section id="menu">
    <div class="container">
        <div class="menu-area">
            <!-- Navbar -->
            <div class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <!-- Left nav -->
                    <ul class="nav navbar-nav">
                        <li><a href="index.html">Trang chủ</a></li>
                        @foreach (var item in Model)
                        {
                            <li>
                                <a href="@Url.Action("Index", "Product", new { @Id = item.Id })">@item.Name</a>
                            </li>
                        }
                        <li><a href="@Url.Action("Contact", "Home")">@VNLang.CONTACT</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
</section>

